{
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "node": "node --import=extensionless/register",
    "node:dev": "node --loader ts-node/esm --import=extensionless/register",
    "build:client": "NODE_ENV=production npm run node:dev ./node_modules/webpack/bin/webpack.js",
    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json",
    "copy:sql": "copyfiles -u 1 \"server/sql/**/*\" dist/server",
    "build": "npm run clean && npm run copy:sql && concurrently --names \"client,server\" --prefix name --prefix-colors \"blue,green\" \"npm run build:client\" \"npm run build:server\"",
    "start": "NODE_ENV=production npm run node dist/server/index.js",
    "dev": "nodemon"
  },
  "type": "module",
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.18",
    "@types/pg": "^8.15.2",
    "@types/webpack-hot-middleware": "^2.25.9",
    "cheerio": "^1.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "glob": "^11.0.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "rimraf": "^6.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-dev-server": "^5.2.1",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-manifest-plugin": "^5.0.1",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "extensionless": "^1.9.9",
    "pg": "^8.16.0",
    "uuid": "^11.1.0"
  }
}
