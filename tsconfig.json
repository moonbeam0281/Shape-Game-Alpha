{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "incremental": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "node_modules/dist/**/*"]
}
